<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a7eb172bbf.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./stylePlay.css">
    <title>Play ReWordle</title>
</head>

<body>
    <!-- <div class="header-box d-flex justify-content-center"> -->
        <header class="header">
            <div class="title">ReWordle</div>
            <div id="wordnum"> # </div>
        </header>
    <!-- </div> -->
    <div class="cointainer mt-4">
        <div class="board-container" id="board">
            <div class="letter" id="1"> </div>
            <div class="letter" id="2"> </div>
            <div class="letter" id="3"> </div>
            <div class="letter" id="4"> </div>
            <div class="letter" id="5"> </div>
            <div class="letter" id="6"> </div>
            <div class="letter" id="7"> </div>
            <div class="letter" id="8"> </div>
            <div class="letter" id="9"> </div>
            <div class="letter" id="10"> </div>
            <div class="letter" id="11"> </div>
            <div class="letter" id="12"> </div>
            <div class="letter" id="13"> </div>
            <div class="letter" id="14"> </div>
            <div class="letter" id="15"> </div>
            <div class="letter" id="16"> </div>
            <div class="letter" id="17"> </div>
            <div class="letter" id="18"> </div>
            <div class="letter" id="19"> </div>
            <div class="letter" id="20"> </div>
            <div class="letter" id="21"> </div>
            <div class="letter" id="22"> </div>
            <div class="letter" id="23"> </div>
            <div class="letter" id="24"> </div>
            <div class="letter" id="25"> </div>
            <div class="options-container mt-2" id="board">
                <button data-key="↵" class="try">try</button>
                <div class = "reset" onclick="resetBoard()"><i class="fa-solid fa-rotate-left"></i></div>
            </div>
        </div>
        <div class="keyboard-container" id="board">
            <div id="keyboard">
                <div class="row">
                    <button data-key="q">q</button>
                    <button data-key="w">w</button>
                    <button data-key="e">e</button>
                    <button data-key="r">r</button>
                    <button data-key="t">t</button>
                    <button data-key="y">y</button>
                    <button data-key="u">u</button>
                    <button data-key="i">i</button>
                    <button data-key="o">o</button>
                    <button data-key="p">p</button>
                </div>
                <div class="row">
                    <div class="spacer half"></div>
                        <button data-key="a">a</button>
                        <button data-key="s">s</button>
                        <button data-key="d">d</button>
                        <button data-key="f">f</button>
                        <button data-key="g">g</button>
                        <button data-key="h">h</button>
                        <button data-key="j">j</button>
                        <button data-key="k">k</button>
                        <button data-key="l">l</button>
                    <div class="spacer half"></div>
                </div>
                <div class="row">
                    <button data-key="z">z</button><button data-key="x">x</button>
                    <button data-key="c">c</button>
                    <button data-key="v">v</button>
                    <button data-key="b">b</button>
                    <button data-key="n">n</button>
                    <button data-key="m">m</button>
                    <button data-key="←" class="one-and-a-half">←</button>
                </div>
            </div>
        </div>
    </div>
    <script src="./script.js"></script>
</body>

</html>